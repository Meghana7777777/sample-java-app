
pipeline {
   agent {
        node {
            label 't055-runner'
        }
    }
   stages {
      stage('Checkout') {
         steps {
            git credentialsId: 'ca-git-access', branch: 'development', url: "https://git.cloudavise.com/visops/t055/ssample-java-app.git"
         }
      }
      stage('Create Application Build') {
         steps {
             sh '''cd hello-world
                   mvn install clean package'''

             }
         }
      
      stage('Install Tomcat') {
         steps {
            sh '''ansible-vault decrypt --vault-id /home/ubuntu/tmp/vault-id jenkins-key.pem
                  chmod 400 jenkins-key.pem
                  ansible-playbook -i inventory install-tomcat.yml'''
         }
      }
      
      stage('Deploy Build') {
         steps {
             sh ' ansible-playbook -i inventory deploy-tomcat.yml' 
         }
      }
   }
}
